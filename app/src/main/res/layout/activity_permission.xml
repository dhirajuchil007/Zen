<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.PermissionActivity">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_title"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Welcome to Zen - Notification Manager"
            android:layout_margin="16dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_instruction"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_title"
            android:layout_margin="16dp"
            android:text="This app gets rid of your distracting notifications and only allows the notiifcations that you want to reach you."
            android:layout_width="0dp"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>

        <Button
            android:textColor="@color/white"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/txt_instruction"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="ENable Notification Permission"
            android:id="@+id/btn_permission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>