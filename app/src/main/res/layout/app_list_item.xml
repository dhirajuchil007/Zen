<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_app_icon"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="45dp"
            android:layout_height="45dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="16sp"
            android:id="@+id/txt_app_name"
            android:text="WhatsApp"
            app:layout_constraintStart_toEndOf="@id/img_app_icon"
            app:layout_constraintEnd_toStartOf="@id/checkbox_add"
            android:layout_width="0dp"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="@id/img_app_icon"
            app:layout_constraintBottom_toBottomOf="@id/img_app_icon"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/checkbox_add"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/img_app_icon"
            android:layout_margin="16dp"
            android:textColor="@color/skin_color"
            android:id="@+id/txt_added"
            android:text="Added"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            app:layout_constraintTop_toBottomOf="@id/img_app_icon"
            android:layout_margin="16dp"
            android:background="@color/skin_color"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>